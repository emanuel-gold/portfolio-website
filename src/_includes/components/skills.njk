<section id="skills" class="scroll-mt-24 py-14 sm:py-16">
  <div class="mx-auto w-full max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="mb-10">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Skills</h2>
    </div>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      {% for skill in site.skills %}
        <div class="rounded-2xl border p-4 dark:border-gray-800">
          <div class="mb-2 flex items-center justify-between">
            <span class="font-medium">{{ skill.name }}</span>
            <span class="text-sm opacity-70">{{ skill.level }}%</span>
          </div>
          <div class="h-2 w-full rounded-full bg-gray-200 dark:bg-gray-800">
            <div class="h-2 rounded-full bg-gray-900 transition-all dark:bg-white" style="width: {{ skill.level }}%"></div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

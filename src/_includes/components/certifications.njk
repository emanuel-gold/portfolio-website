<section id="certifications" class="scroll-mt-24 py-14 sm:py-16">
  <div class="mx-auto w-full max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="mb-10">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Certifications</h2>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for certification in site.certifications %}
        <div class="flex items-center gap-4 lg:gap-3 rounded-2xl border p-4 bg-white dark:bg-gray-950 dark:border-gray-800">

          {% if certification.image and certification.link %}
            <a class="w-[75px] shrink-0"  href="{{ certification.link }}" target="_blank">
              <img class="object-cover aspect-square rounded-full" width="75" height="75" alt="{{ certification.name }}" src="{{ certification.image }}">
            </a>
          {% elif certification.image %}
            <img class="w-[75px] shrink-0 object-cover aspect-square rounded-full" width="75" height="75" alt="{{ certification.name }}" src="{{ certification.image }}">
          {% endif %}
          <div class="flex flex-col gap-2">
            {% if certification.link %}
              <a href="{{ certification.link }}" target="_blank" class="font-medium transition hover:text-fuchsia-500 hover:underline">{{ certification.name }}</a>
            {% else %}
              <span class="font-medium">{{ certification.name }}</span>
            {% endif %}
            <a href="{{ certification.issuer.link }}" target="_blank" class="max-w-max rounded-full border px-2 py-0.5 text-xs transition hover:bg-gray-100 dark:hover:bg-gray-800">{{ certification.issuer.name }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
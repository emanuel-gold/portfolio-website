---
layout: layouts/base.njk
pageType: post
---
{% import "components/icons.njk" as icons %}

{% include "components/header.njk" %}
<main class="py-10 sm:pt-10">
  <div class="mx-auto w-full max-w-post px-4 sm:px-6 lg:px-8">
    <a
      href="/portfolio/"
      class="mb-6 inline-flex items-center gap-2 text-sm font-medium text-fuchsia-600 transition hover:text-fuchsia-500 dark:text-fuchsia-400 dark:hover:text-fuchsia-300"
    >
      {{ icons.arrow_left('w-4 h-4') }}
      Back to portfolio
    </a>
    <article class="prose dark:prose-invert md:prose-md lg:prose-lg  mx-auto rounded-3xl border border-gray-200 bg-white p-8 shadow-sm dark:border-gray-800 dark:bg-gray-900">
      <header class="mb-8">
        <div class="pb-4 flex flex-col items-start sm:justify-between border-b dark:border-gray-800">
          <h1 style="margin-bottom:16px;">{{ title }}</h1>
          <span class="inline-flex items-center rounded-full border px-3 py-1 text-sm font-medium uppercase opacity-70 dark:border-gray-700">
            {{ period }}
          </span>
          <img class="rounded-2xl !my-4" src="{{ header_image }}">
        </div>
        {% if blurb %}
          <p class="text-lg leading-relaxed opacity-90">{{ blurb | safe }}</p>
        {% endif %}
        {% if tags %}
          <div class="mt-6 flex flex-wrap gap-2">
            {% for tag in tags %}
              <span class="rounded-full border border-gray-200 px-3 py-1 text-xs font-medium uppercase opacity-80 dark:border-gray-700">
                {{ tag }}
              </span>
            {% endfor %}
          </div>
        {% endif %}
        {% if links %}
          <div class="mt-6 flex flex-wrap gap-4">
            {% if links.preview %}
              <a href="{{ links.preview }}" class="inline-flex items-center gap-2 text-sm font-medium hover:underline">
                {{ icons.external_link('w-4 h-4') }} Preview
              </a>
            {% endif %}
            {% if links.repo %}
              <a href="{{ links.repo }}" class="inline-flex items-center gap-2 text-sm font-medium hover:underline">
                {{ icons.github('w-4 h-4') }} Code
              </a>
            {% endif %}
          </div>
        {% endif %}
      </header>
      <div class="prose max-w-none dark:prose-invert">
        {{ content | safe }}
      </div>
    </article>
  </div>
</main>
{% include "components/contact.njk" %}
{% include "components/footer.njk" %}

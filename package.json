{
  "name": "my-portfolio",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:css && eleventy",
    "build:css": "tailwindcss -i src/assets/css/main.css -o public/assets/main.css --minify",
    "watch:css": "tailwindcss -i src/assets/css/main.css -o public/assets/main.css --watch",
    "serve": "eleventy --serve --quiet",
    "dev": "npm-run-all --parallel watch:css serve",
    "site-editor": "node tools/site-editor/server.js"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}
